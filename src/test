#include "so_long.h"


int find(char *attrib, char *map)
{
	int count;

	count = 1;
	if (ft_strncmp(attrib, "width", 5) == 0)
	{
		while (map[count] && map[count] != '\n')
			count++;
		return (count);
	}
	else if (ft_strncmp(attrib, "height", 6) == 0)
	{
		while(*(map++))
		{
			if (*map == '\n')
				count++;
		}
		return (count);
	}
	else { printf("wtffff broo...") ;}
	return (1);
}

